<project:ControlBase x:Class="EAppBase.Gui.Common.RaceState.Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EAppBase.Gui.Common.RaceState"
             xmlns:project="clr-namespace:EAppBase.Gui"
             mc:Ignorable="d" 
             d:DesignHeight="{Binding Height}" d:DesignWidth="{Binding Width}">
    <project:ControlBase.DataContext>
        <local:Context Caption="1X" RaceState="Absent"/>
    </project:ControlBase.DataContext>
    <Border Background="{Binding Background}" CornerRadius="{Binding CornerRadius}" Padding="0">
        <Label Content="{Binding Caption}" FontSize="{Binding FontSize}" Padding="0"
               HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding Foreground}"/>
    </Border>
</project:ControlBase>
